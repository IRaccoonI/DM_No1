#:kivy

<ReportLayout>:
    canvas:
        Color:
            rgb: .2, .4, .2
        Rectangle:
            size: self.size
            pos: self.pos

<SetLayout>:
    canvas:
        Color:
            rgb: .1, .2, .1
        Rectangle:
            size: self.size
            pos: self.pos

<MainListBoxSet>
    canvas:
        Color:
            rgb: .36 * self.brightness, .18, 0
        Rectangle:
            size: self.size
            pos: self.pos

<SubListBoxSet>
    canvas:
        Color:
            rgb: .12 * self.brightness, .24 * self.brightness, .12 * self.brightness
        Rectangle:
            size: self.size
            pos: self.pos

<ItemsBox>:
    size_hint_y: None
    height: 5000
    cols: 1
    padding: 5
    spacing:10
    row_default_height: 65
    row_force_default: True

<DragLabelItem>:
    canvas:
        Color:
            rgba: 1, 1, 1, .05
        Rectangle:
            size: self.size
            pos: self.pos

    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 10

<ReportGrid>:
    # canvas:
    #     Color:
    #         rgba: 1, 1, 1, .02
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

    size_hint_y: None
    height: 2500
    cols: 1
    padding: 5, 15, 25, 15
    spacing: 10
    row_default_height: 65
    row_force_default: True

